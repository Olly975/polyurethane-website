@{
    ViewBag.Title = "Замовлення";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Polyurethane.Utils.Helpers
@model List<Polyurethane.Data.Models.Orders.Order>

<div style="min-height: 500px">
<table class="table table-striped">
    <thead>
    <tr>
        <th>Номер замовлення</th>
        <th>Дата</th>
        <th>Вартість</th>
        <th>Статус</th>
        <th>Пошта клієнта</th>
        <th>Телефон клієнта</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId.ToString("D5")</td>
            <td>@order.OrderDate</td>
            <td>@order.Price грн</td>
            <td>@order.OrderStatus.Description()</td>
            <td>@order.Customer.Email</td>
            <td>@order.Customer.PhoneNumber</td>
            <td><a href="/order/process/@order.Id" class="btn btn-default btn-sm">Опрацювати</a></td>
        </tr>
    }
    </tbody>
</table>
</div>
