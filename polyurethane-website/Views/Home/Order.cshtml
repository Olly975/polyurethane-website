
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container delivery_form">
    <div class="row">
        <form class="form-horizontal">
            <fieldset>
                <legend class="text-center">Доставка</legend>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" id="inputEmail" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputTel" class="col-lg-2 control-label">Телефон</label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" id="inputTel" placeholder="+38 (097) 777 77 77">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputText" class="col-lg-2 control-label">Прізвище, Ім'я</label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" id="inputText" placeholder="Прізвище, Ім'я">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputText" class="col-lg-2 control-label">Місто</label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" id="inputText" placeholder="Місто">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Доставка</label>
                    <div class="col-lg-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                                У віддділення
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                Кур'єром
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Форма оплати</label>
                    <div class="col-lg-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3" checked="">
                                На карту "приват банк"
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios4" value="option4">
                                Накладним
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">Пошта</label>
                    <div class="col-lg-4">
                        <select class="form-control" id="select">
                            <option>Нова пошта</option>
                            <option>Укр пошта</option>
                            <option>Делівері</option>
                            <option>Авто люкс</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputText" class="col-lg-2 control-label">№ Складу/адреса</label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" id="inputText" placeholder="Адреса">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Відправити</button>
                        <button type="reset" class="btn btn-default">Відмінити</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

