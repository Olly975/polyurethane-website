<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="../../css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../../css/animate.css" rel="stylesheet" type="text/css" />
    <script src="../../js/jquery-1.11.3.min.js"></script>

    <script src="../../js/material-dialogs.js"></script>
    <link href="../../images/adminPanel.ico" rel="shortcut icon" />
    <script>
        function pushButtonToHeader(btn) {
            $('#header-buttons').append(btn);
        }

        function AddButtonToHeader(btn, position) {
            if (position === undefined) position = "right";
            var li = $('<li></li>');
            li.append(btn);
            $('[name="btn-container-' + position + '"]').append(li);
        }

        function initSearch(searchFunction, placeholder, filterText, fields) {
            var searchForm = $('#search-form');
            if (placeholder !== undefined)
                searchForm.find('input').attr('placeholder', placeholder).val(filterText);

            searchForm.css('display', 'initial');
            searchForm.find('button').click(searchFunction);
            if (fields !== undefined && fields != null) {
                $(fields).each(function (i, item) {
                    searchForm.append($('<input name="' + item.name + '" value="' + item.value + '" style="display: none">'));
                });
            }
        }
    </script>
    <style>
        html, body {
            background-color: #F3F3F3;
        }

        [data-notify="progressbar"] {
            margin-bottom: 0px;
            position: absolute;
            bottom: 0px;
            left: 0px;
            width: 100%;
            height: 5px;
        }

        .navbar-default {
            background-color: #222222;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">CID</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <div class="nav navbar-nav navbar-left"></div>
                <ul class="nav navbar-nav navbar-left" name="btn-container-left"></ul>
                <div class="nav navbar-nav navbar-right"></div>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" style="font-size: large;" onclick="logout();"><span style="margin-right: 5px;" class="badge"><i class="glyphicon glyphicon-user"></i></span>@ViewBag.user</a></li>
                </ul>
                <form class="navbar-form navbar-right" id="search-form" style="display: none;" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="filter">
                    </div>
                    <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search" style="font-size: large; margin-right: 5px;"></i>Search</button>
                </form>
                <ul class="nav navbar-nav navbar-right" name="btn-container-right"></ul>
                <form id="header-buttons" class="navbar-form navbar-right"></form>
            </div>
        </div>
    </nav>
    <section class="container" id="main" style="margin-top: 63px; border: 1px solid #B5B5B5; box-shadow: -1px 1px 7px 0px rgba(0, 0, 0, 0.35); background-color: white; padding-bottom: 10px;">
        @RenderBody()
    </section>

    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/bootstrap-notify.js"></script>

</body>
</html>